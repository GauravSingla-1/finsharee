modules = ["java", "java-21", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinShare API Gateway"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "User Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Group Expense Service"

[[workflows.workflow]]
name = "FinShare API Gateway"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile spring-boot:run -Dspring-boot.run.jvmArguments=\"-Dserver.port=5000\""
waitForPort = 5000

[[workflows.workflow]]
name = "User Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd user-service && mvn clean compile spring-boot:run -Dspring-boot.run.jvmArguments=\"-Dserver.port=8001\""
waitForPort = 8001

[[workflows.workflow]]
name = "Group Expense Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd group-expense-service && mvn spring-boot:run -Dspring-boot.run.jvmArguments=\"-Dserver.port=8002\""
waitForPort = 8002

[deployment]
run = ["sh", "-c", "mvn clean compile spring-boot:run -Dspring-boot.run.jvmArguments=\"-Dserver.port=5000\""]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 3000

[[ports]]
localPort = 8002
externalPort = 3001

[[ports]]
localPort = 8003
externalPort = 3002
